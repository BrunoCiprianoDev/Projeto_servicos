package entidades;

import java.time.LocalDate;

public class Contrato {
	
	private static LocalDate parametroData;
	private static int parametroCodigo;
	
	private String codigoContrato;
	private LocalDate dataInicioContrato;
	private Servico servico;
	private Cliente cliente;
	private Funcionario funcionario;
	
	public Contrato(Servico servico, Cliente cliente, Funcionario funcionario) {
		this.gerarNumeroPrestacaoServico();
		this.servico = servico;
		this.cliente = cliente;
		this.funcionario = funcionario;
	}
	
	private void gerarNumeroPrestacaoServico() {
		if(Contrato.parametroData == null) {
			Contrato.parametroData = LocalDate.now();
		}else if(Contrato.parametroData.getYear() != LocalDate.now().getYear()) {
			Contrato.parametroData = LocalDate.now();
			Contrato.parametroCodigo = 0;
		}
		this.codigoContrato = Contrato.parametroData.getYear()+"-"+(++Contrato.parametroCodigo);	
	}
	
	public String getCodigoContrato() {
		return this.codigoContrato;
	}

	

	@Override
	public String toString() {
		return ".";
	}
	
	
	
	
	
}
