package entidades;

import java.time.LocalDate;

public class Contrato {
	
	private static LocalDate parametroData;
	private static int parametroCodigo;
	
	private String codigoContrato;
	private int anoInicioContrato;
	private int mesInicioContrato;
	
	public Contrato(int anoInicioContrato, int mesInicioContrato) {
		
		this.anoInicioContrato = anoInicioContrato;
		this.mesInicioContrato = mesInicioContrato;
	}
	
	private void gerarNumeroPrestacaoServico() {
		if(Contrato.parametroData == null) {
			Contrato.parametroData = LocalDate.now();
		}else if(Contrato.parametroData.getYear() != LocalDate.now().getYear()) {
			Contrato.parametroData = LocalDate.now();
			Contrato.parametroCodigo = 0;
		}
		this.codigoContrato = Contrato.parametroData.getYear()+"-"+(++Contrato.parametroCodigo);
	}

	public int getAnoInicioContrato() {
		return anoInicioContrato;
	}

	public void setAnoInicioContrato(int anoInicioContrato) {
		this.anoInicioContrato = anoInicioContrato;
	}

	public int getMesInicioContrato() {
		return mesInicioContrato;
	}

	public void setMesInicioContrato(int mesInicioContrato) {
		this.mesInicioContrato = mesInicioContrato;
	}
	
	
	
	
	
}
